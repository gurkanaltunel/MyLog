@model BlogApplication.ViewModel.CommentViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.Article.Id, new { id="articleId"})
    <span class="label label-warning"> @Model.Article.Title</span>
    <p>@Model.Article.Content</p>
    <p>@Html.DisplayFor(model=>model.Article.PostDate)</p>
        <div class="panel panel-primary">
            <div class="panel-heading">Comments</div>
            <div class="panel-body">
                <table class="table table-bordered">
                    @foreach (var itemComment in Model.Comments)
                    {      
                        <tr class="warning">
                            <td>
                                @itemComment.Comments<br />
                                @itemComment.CommentOwner<br />
                                @Html.DisplayFor(item=>itemComment.CommentDate)<br />
                            </td>
                        </tr>
                    }                  
                </table>
                <table>
                    <tr><td>name:</td><td><input type="text" id="commentOwner" style="width:250px" /></td></tr>
                    <tr><td>comment:</td><td><textarea id="txtComment" style="width:250px; height:100px"></textarea></td></tr>
                </table>
                <button id="btnSubmitComment" type="button" class="btn btn-lg btn-primary">Add Comment</button>
                @Html.ActionLink("Back", "Index","Home", htmlAttributes: new {@class="btn btn-lg btn-primary" })
            </div>
        </div>
}
